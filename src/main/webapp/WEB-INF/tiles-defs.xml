<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
	<definition name="body" template="/WEB-INF/tiles/body.jsp">
		<put-attribute name="messages"   value="/WEB-INF/tiles/messages.jsp"/>     
	</definition>
	
	<definition name="main" template="/WEB-INF/tiles/main.jsp">
		<put-attribute name="title"  value="Template"/>
		<put-attribute name="header" value="/WEB-INF/tiles/header.jsp"/>
		<put-attribute name="menu"   value="/WEB-INF/tiles/menu.jsp"/>
		<put-attribute name="body"   value="body"/>
		<put-attribute name="footer"   value="/WEB-INF/tiles/footer.jsp"/>
	</definition>
	
	<definition name="welcome" extends="main">
		<put-attribute name="title"  value="Welcome"/>
		<put-attribute name="messages"  value="/WEB-INF/jsp/messages.jsp"/>
	</definition>
	
	
</tiles-definitions>